<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/dlrgRed"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dlrgYellow"
        android:textSize="25dp"
        android:textFontWeight="560"
        android:textAlignment="center"
        android:text="@string/app_name" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_marginTop="10dp"
        android:stretchColumns="0, 1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/freibadText"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="@string/freibad"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textFontWeight="450"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/trainingText"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/training"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textFontWeight="450"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/freibadButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@color/pool"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_swimming_pool" />

            <ImageButton
                android:id="@+id/trainingButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/pool"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_swim_race" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/terminText"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="@string/termin"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textFontWeight="450"
                android:textSize="25sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/terminButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@color/pool"
                app:srcCompat="@drawable/ic_iconmonstr_calendar_4" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</LinearLayout>